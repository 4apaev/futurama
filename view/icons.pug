doctype html
html
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport' content='width=device-width')
    title ICONS
    link(rel='icon', href=ICON)
    link(rel='stylesheet', href='css/main.css', type='text/css')
    script.
      this.log = console.log.bind(console);


  body#svg-icons
    svg#svg-define(version="1.1", xmlns="http://www.w3.org/2000/svg", xmlns:xlink="http://www.w3.org/1999/xlink")
      defs
        each ico, id in icons
          symbol(id=id, viewBox="0 0 24 24"): path(d=ico)

    ul
      each ico, id in icons
        li
          svg.ico: use(xlink:href="#"+id)
          span=id
