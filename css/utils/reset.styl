_rdx = 3px
_primary  = #428bca
_success  = #5cb85c
_info     = #5bc0de
_warning  = #f0ad4e
_danger   = #d9534f

*
  box-sizing: border-box

article, aside, footer, header, nav, section, main
html, body, div, a, ol, li, ul, dl, dd, dt, button, select, input, label, form, fieldset, h1, h2, h3, h4, h5, h6, p
  padding: 0
  margin: 0

article, aside, footer, header, nav, section, main
  display: block

ol, li, ul
  list-style: none

a, button
  text-decoration: none
  cursor: pointer

button, input, select, textarea, fieldset
  outline:none
  border: none
  font-size: 100%
  &:focus
    outline:none

pre:focus
  outline:none

code, kbd, pre, samp
  font 1em/1.4 monospace, serif