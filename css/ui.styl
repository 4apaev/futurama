.info
  bg _info
.warning
  bg _warning
.danger
  bg _danger
.prime
  bg _prime
.brand
  bg _brand
.ok
  bg _ok
.err
  bg _err


input
  shd 0 0 0 1px #ccc
  padding 0 1em
  line-height 2
  &:focus
    bg lightyellow

.btn-option
  label
    @extend $nowrap
    cursor pointer
    display block
    line-height 2
    &:before
      display inline-block
      padding 0 .5em
      line-height 2
      content '-'
  input
    display none
    &:checked + label:before
      content '+'

.btn-group
  rd 3px
  shd rgba(#000, .2)
  display flex
  > [class*='btn']
    flex: 1
    rd: 0px
    // bg: transparent

    &:first-child
      shd: none
      rd: 3px 0 0 3px

    &:last-child
      shd: none
      rd: 0 3px 3px 0

    &:not(:last-child)
      shd:1px 0 0 rgba(#000, .2)

.popup
  position fixed
  top 8em
  right 4em
  left 16em
  background #fff
  rd 3px
  shd 1px 1px 15px