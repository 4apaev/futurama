@require './utils/reset'
@require 'utils'

html
  font-size: 100%
  -webkit-text-size-adjust: 100%
  height: 100%

body
  height: 100%
  color: _grey3
  font: 14px/24px "HelveticaNeue", "Helvetica Neue", Helvetica, Arial, sans-serif
  font-kerning: normal
  -webkit-font-smoothing: antialiased
  display flex
  flex-direction column

header
  h1
    line-height 2
    padding 0 1em

a
  color dodgerblue

.page
  brd t 1px #ccc
  brd b 1px #ccc
  display flex
  flex-direction row
  flex 16

aside
  flex 2
  brd r 1px #ccc
  overflow-y auto
  label
    line-height 2
    display block
    padding 0 1em
  select
    resize vertical
    width 100%
    max-width 100%
    brd t 1px #ccc
    brd b 1px #ccc
    padding .5em
    option:nth-child(2n+1)
      bg aliceblue

main
  flex 4
  padding 1em
  overflow-y auto
  columns 4
  column-gap 1em
  column-rule 1px solid #ccc

header, footer
  flex 1

