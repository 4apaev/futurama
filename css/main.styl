@require './utils/reset'
@require 'utils'
@require 'icons'

html
  font-size: 100%
  -webkit-text-size-adjust: 100%
  height: 100%

body
  height: 100%
  color: #555
  font: 14px/24px "HelveticaNeue", "Helvetica Neue", Helvetica, Arial, sans-serif
  font-kerning: normal
  -webkit-font-smoothing: antialiased
  display flex
  flex-direction column


header
  h1
    line-height 2
    padding 0 1em

a
  color dodgerblue

.page
  position relative
  brd t 1px #ccc
  brd b 1px #ccc
  display flex
  flex-direction row
  flex 16

aside
  position relative
  width 16em
  brd r 1px #ccc
  // overflow-y auto
  bg azure
  button.i-restore
    line-height 2
    display block
    padding 0 .5em 0 0
    shd none
    width 100%
    text-align left
  select
    resize vertical
    width 100%
    max-width 100%
    brd t 1px #ccc
    brd b 1px #ccc
    padding .5em
    option:nth-child(2n+1)
      bg aliceblue

main
  flex 1
  overflow-y auto
  position relative

  #navbar
    bg azure
    brd b 1px #ccc
    left 0
    right 0
    height 4em
    position absolute
    > *
      display inline-block
      margin 1em 0 0 1em
    input
      width 3em
      shd none
      bg transparent
      padding 0

  #list
    position relative
    columns 2
    column-gap 0
    column-rule 1px solid #ccc
    overflow-y auto
    mrg-t 4em
    a
      display block
      overflow hidden
      text-overflow ellipsis
      white-space nowrap
      padding 0 1em
      brd b 1px #ccc


header, footer
  flex 1
  position relative


@require 'ui'
@require 'character'

